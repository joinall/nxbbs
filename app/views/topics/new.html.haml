= render 'shared/breadcrumb',links:[["首页",""],["社区",topics_path],["发贴",""]]
%section#new_topic.box
  %h1 新建帖子
  = form_for @topic , html:{class: "form-horizotal"} do |f|
    .control-group
      =f.label :title ,"标题",class: "control-label"
      .controls
        =f.select :node_id,options_for_select(Node.all.map{|node| [node.name,node.id]})
        =f.text_field :title
    .control-group
      =f.label :content,"正文", class: "control-label"
      .controls
        =f.text_area :content ,rows: 20
    .submit-button
      %input(type="submit" value="保存" class="btn btn-primary")
      = link_to "取消"
