<div class="box">
  <div class="userinfo">
    <div class="pull-right avatar_big"><%= getavatar(@user,:big) %></div>
    <dl class="dl-horizontal">
      <dt>昵称:</dt>
      <dd><%= @user.netname %> </dd>
      <dt>注册日期:</dt>
      <dd><%= I18n.l(@user.created_at ,:format => :long) %></dd>
      <dt>个性签名</dt><dd>.</dd>
      <dt>腾讯微博</dt><dd>.</dd>
      <dt>手机号码</dt><dd>.</dd>
      <% if ( current_user.admin? or current_user.id == @user.id) %>
      <dt>登录名</dt><dd><%= @user.username %></dd>
      <dt>真实姓名</dt><dd><%= @user.truename %>
      <dt>OACODE</dt><dd><%= @user.oacode %>
      <dt>Telephone</dt><dd><%= @user.telephone %></dd>
      <% end %>
    </dl>
  </div>
</div>  
